<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.glassfish.hk2</groupId>
        <artifactId>maven-plugins</artifactId>
        <version>3.1.1</version>
    </parent>

    <artifactId>hk2-inhabitant-generator</artifactId>
    <packaging>maven-plugin</packaging>

    <name>Inhabitant Generator</name>
    <description>${project.name}</description>

    <properties>
        <findbugs.exclude>${project.basedir}/exclude.xml</findbugs.exclude>
    </properties>

    <dependencies>
        <dependency>
            <groupId>jakarta.inject</groupId>
            <artifactId>jakarta.inject-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-analysis</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-commons</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-tree</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ow2.asm</groupId>
            <artifactId>asm-util</artifactId>
        </dependency>
        <dependency>
            <groupId>org.glassfish.hk2</groupId>
            <artifactId>hk2-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.ant</groupId>
            <artifactId>ant</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>-Dbuild.dir=${project.build.directory} @{surefireArgLineExtra}</argLine>
                    <excludes>
                        <exclude>**/gendir/*</exclude>
                    </excludes>
                </configuration>
             </plugin>
             <plugin>
                 <groupId>org.apache.maven.plugins</groupId>
                 <artifactId>maven-compiler-plugin</artifactId>
                 <executions>
                     <execution>
                         <id>gendir</id>
                         <goals>
                             <goal>testCompile</goal>
                         </goals>
                         <configuration>
                             <testExcludes>
                                 <exclude>**/negative/*</exclude>
                                 <exclude>**/InhabitantsGeneratorTest.java</exclude>
                             </testExcludes>
                             <outputDirectory>${project.build.testOutputDirectory}/gendir</outputDirectory>
                         </configuration>
                     </execution>
                     <execution>
                         <id>negative</id>
                         <goals>
                             <goal>testCompile</goal>
                         </goals>
                         <configuration>
                             <testExcludes>
                                 <exclude>generator</exclude>
                             </testExcludes>
                             <testIncludes>
                                 <include>**/negative/*</include>
                             </testIncludes>
                             <outputDirectory>${project.build.testOutputDirectory}/negative</outputDirectory>
                         </configuration>
                     </execution>
                 </executions>
             </plugin>
             <plugin>
                 <groupId>org.apache.maven.plugins</groupId>
                 <artifactId>maven-jar-plugin</artifactId>
                 <executions>
                     <execution>
                         <id>gendir-package</id>
                         <goals>
                             <goal>test-jar</goal>
                         </goals>
                         <phase>process-test-classes</phase>
                         <configuration>
                             <archive>
                                 <manifestEntries>
                                     <Automatic-Module-Name>org.glassfish.hk2.maven.generator</Automatic-Module-Name>
                                 </manifestEntries>
                             </archive>
                             <excludes>
                                 <exclude>**/negative/*</exclude>
                             </excludes>
                             <finalName>gendir</finalName>
                             <outputDirectory>${project.build.testOutputDirectory}</outputDirectory>
                         </configuration>
                     </execution>
                 </executions>
             </plugin>
             <plugin>
                 <artifactId>maven-plugin-plugin</artifactId>
                 <configuration>
                     <goalPrefix>${project.artifactId}</goalPrefix>
                 </configuration>
             </plugin>
        </plugins>
    </build>
</project>
